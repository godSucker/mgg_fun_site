---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Ошибка 404 | Bio-Lab">
  <!-- Контейнер на всю высоту минус шапка/футер, чтобы центровать идеально -->
  <div class="relative flex flex-col items-center justify-center min-h-[80vh] w-full overflow-hidden text-center py-20">

    <!-- ФОНОВЫЕ ЭФФЕКТЫ -->
    <div class="absolute inset-0 opacity-[0.05] pointer-events-none"
         style="background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 40px 40px;">
    </div>
    <!-- Пятно света сзади -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] md:w-[600px] md:h-[600px] bg-purple-600/20 blur-[100px] rounded-full pointer-events-none"></div>

    <!-- ОСНОВНОЙ КОНТЕНТ -->
    <div class="relative z-10 flex flex-col items-center">

      <!-- 404 GLITCH -->
      <div class="relative mb-6">
        <!-- Основной слой -->
        <h1 class="text-[100px] md:text-[180px] leading-[0.8] font-black text-slate-800 select-none glitch-text" data-text="404">
          404
        </h1>
        <!-- Слой поверх для эффекта свечения -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
             <span class="text-[100px] md:text-[180px] leading-[0.8] font-black text-white/5 blur-sm">404</span>
        </div>
      </div>

      <!-- ТЕКСТ ОШИБКИ -->
      <div class="flex flex-col items-center gap-4 max-w-lg px-4">
        <div class="px-4 py-1 rounded border border-red-500/50 bg-red-500/10 text-red-400 text-xs md:text-sm font-mono font-bold tracking-[0.2em] animate-pulse shadow-[0_0_15px_rgba(239,68,68,0.2)]">
          CRITICAL ERROR
        </div>

        <h2 class="text-3xl md:text-5xl font-black text-white uppercase tracking-wide drop-shadow-lg">
          Объект не найден
        </h2>

        <p class="text-slate-400 text-sm md:text-base font-medium leading-relaxed">
          Запрашиваемая последовательность ДНК повреждена<br class="hidden md:block" /> или была удалена из базы данных MGG.
        </p>

        <!-- КНОПКА -->
        <a href="/"
           class="group relative mt-8 px-10 py-4 bg-slate-900 border border-slate-700 hover:border-lime-500 text-slate-300 hover:text-black font-black uppercase tracking-widest text-xs rounded transition-all duration-300 overflow-hidden">
          <span class="relative z-10 flex items-center gap-3 group-hover:text-lime-400">
            <span>⬅</span> ВЕРНУТЬСЯ В БИБЛИОТЕКУ
          </span>
        </a>
      </div>

    </div>

    <!-- ТЕХНИЧЕСКИЙ ТЕКСТ (ВНИЗУ) -->
    <div class="absolute bottom-0 left-0 w-full p-6 flex justify-between items-end text-[10px] font-mono text-slate-700 pointer-events-none opacity-60">
      <div class="text-left">
        SYS_ERR_CODE: 0x404<br>
        TERMINAL: MGG_LAB_01
      </div>
      <div class="hidden md:block text-right">
        MEMORY_DUMP: FAILURE<br>
        REBOOT_REQUIRED
      </div>
    </div>

    <!-- ДЕКОР УГЛОВ -->
    <div class="absolute top-10 left-10 w-20 h-20 border-t-2 border-l-2 border-white/5 rounded-tl-3xl pointer-events-none"></div>
    <div class="absolute bottom-10 right-10 w-20 h-20 border-b-2 border-r-2 border-white/5 rounded-br-3xl pointer-events-none"></div>

  </div>
</Layout>

<style>
  .glitch-text {
    position: relative;
    color: #1e293b; /* slate-800 */
    text-shadow: 2px 2px 0px #38bdf8, -2px -2px 0px #e879f9;
  }

  /* Анимация дергания */
  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #0a0f1c; /* Цвет фона страницы, чтобы скрывать часть букв */
    overflow: hidden;
  }

  .glitch-text::before {
    left: 2px;
    text-shadow: -2px 0 #ff00c1;
    clip: rect(24px, 550px, 90px, 0);
    animation: glitch-anim 3s infinite linear alternate-reverse;
  }

  .glitch-text::after {
    left: -2px;
    text-shadow: -2px 0 #00fff9;
    clip: rect(85px, 550px, 140px, 0);
    animation: glitch-anim2 2.5s infinite linear alternate-reverse;
  }

  @keyframes glitch-anim {
    0% { clip: rect(14px, 9999px, 125px, 0); transform: skew(0.85deg); }
    5% { clip: rect(68px, 9999px, 11px, 0); transform: skew(0.85deg); }
    10% { clip: rect(96px, 9999px, 93px, 0); transform: skew(0.03deg); }
    15% { clip: rect(37px, 9999px, 30px, 0); transform: skew(0.48deg); }
    50% { clip: rect(99px, 9999px, 35px, 0); transform: skew(0.2deg); }
    100% { clip: rect(25px, 9999px, 80px, 0); transform: skew(0.6deg); }
  }

  @keyframes glitch-anim2 {
    0% { clip: rect(59px, 9999px, 63px, 0); transform: skew(0.4deg); }
    25% { clip: rect(33px, 9999px, 99px, 0); transform: skew(0.8deg); }
    50% { clip: rect(15px, 9999px, 44px, 0); transform: skew(0.2deg); }
    75% { clip: rect(88px, 9999px, 21px, 0); transform: skew(0.6deg); }
    100% { clip: rect(10px, 9999px, 129px, 0); transform: skew(0.5deg); }
  }
</style>
