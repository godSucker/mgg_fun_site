---
// Карточка для раздела или симулятора.
// Принимает свойства: title (string), desc (string), href (string), icon (optional URL).
const { title, desc, href, icon } = Astro.props;
---

<a href={href} class="card">
  {icon ? (
    <div class="card-icon">
      <img src={icon} alt="" />
    </div>
  ) : null}
  <h3 class="card-title">{title}</h3>
  <p class="card-desc">{desc}</p>
</a>

<style>
  .card {
    display: block;
    padding: 1rem;
    background-color: #161b22;
    border: 1px solid #30363d;
    border-radius: 0.5rem;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s, transform 0.1s;
    min-height: 100px;
  }
  
  .card:hover {
    border-color: #58a6ff;
    transform: translateY(-2px);
  }
  
  .card:active {
    transform: translateY(0);
  }
  
  .card-icon img {
    width: 40px;
    height: 40px;
    object-fit: contain;
    margin-bottom: 0.5rem;
  }
  
  .card-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.375rem;
    line-height: 1.3;
  }
  
  .card-desc {
    margin: 0;
    font-size: 0.8125rem;
    color: #8b949e;
    line-height: 1.4;
  }
  
  /* Tablet styles */
  @media (min-width: 768px) {
    .card {
      padding: 1.125rem;
    }
    
    .card-icon img {
      width: 44px;
      height: 44px;
      margin-bottom: 0.625rem;
    }
    
    .card-title {
      font-size: 1.0625rem;
    }
    
    .card-desc {
      font-size: 0.875rem;
    }
  }
  
  /* Desktop styles */
  @media (min-width: 1024px) {
    .card {
      padding: 1.25rem;
    }
    
    .card-icon img {
      width: 48px;
      height: 48px;
      margin-bottom: 0.75rem;
    }
    
    .card-title {
      font-size: 1.125rem;
      margin-bottom: 0.25rem;
    }
    
    .card-desc {
      font-size: 0.875rem;
    }
  }
</style>
