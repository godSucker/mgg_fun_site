---
// Карточка для раздела или симулятора.
// Принимает свойства: title (string), desc (string), href (string), icon (optional URL).
const { title, desc, href, icon } = Astro.props;
---

<a href={href} class="card">
  {icon ? (
    <div class="card-icon">
      <img src={icon} alt="" />
    </div>
  ) : null}
  <h3 class="card-title">{title}</h3>
  <p class="card-desc">{desc}</p>
</a>

<style>
  .card {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    background-color: #161b22;
    border: 1px solid #30363d;
    border-radius: 0.75rem; /* Скруглил углы */
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
    min-height: 140px; /* Увеличил высоту */
  }
  
  .card:hover {
    border-color: #58a6ff;
    transform: translateY(-2px);
  }
  
  .card:active {
    transform: translateY(0);
  }
  
  .card-icon {
    display: flex;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .card-icon img {
    width: 48px;
    height: 48px;
    object-fit: contain;
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.4));
  }
  
  .card-title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.3;
    color: #e2e8f0;
  }
  
  .card-desc {
    margin: 0;
    font-size: 0.85rem;
    color: #94a3b8;
    line-height: 1.5;
    /* Отступ для мобильных, чтобы текст не прилипал к краю */
    padding-bottom: 0.25rem; 
  }
  
  /* Tablet styles */
  @media (min-width: 768px) {
    .card {
      padding: 1.5rem;
      min-height: 160px;
    }
    
    .card-icon img {
      width: 56px;
      height: 56px;
      margin-bottom: 0.75rem;
    }
    
    .card-title {
      font-size: 1.25rem;
    }
    
    .card-desc {
      font-size: 0.95rem;
    }
  }
  
  /* Desktop styles */
  @media (min-width: 1024px) {
    .card {
      padding: 1.75rem;
      min-height: 180px;
    }
    
    .card-icon img {
      width: 64px;
      height: 64px;
      margin-bottom: 1rem;
    }
    
    .card-title {
      font-size: 1.35rem;
      margin-bottom: 0.5rem;
    }
    
    .card-desc {
      font-size: 1rem;
    }
  }
</style>
