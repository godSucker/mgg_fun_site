---
import "@/styles/global.css";
// Simple base layout for the site.
// It provides a consistent header, footer and sets a dark theme background.
const { title, fullWidth = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="ru">
  <head>
  <link rel="preload" as="font" type="font/woff2" href="/fonts/tt-supermolot-neue/TTSupermolotNeue-Bold.woff2" crossorigin>
  <link rel="stylesheet" href="/fonts/tt-supermolot-neue/tt-supermolot-neue.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ?? 'MGG Hub'}</title>
    <style>
      body {
        margin: 0;
        font-family: "TT Supermolot Neue", ui-sans-serif, system-ui, -apple-system,
                 "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans",
                 "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        font-weight: 700;
        font-style: normal;
        background-color: #0d1117;
        color: #c9d1d9;
      }
      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 2rem;
        background-color: #161b22;
        border-bottom: 1px solid #30363d;
      }
      header a {
        color: #58a6ff;
        text-decoration: none;
        margin-right: 1rem;
      }
      header nav a:hover {
        text-decoration: underline;
      }
      main {
        padding: 2rem;
        max-width: 1024px;
        margin: 0 auto;
      }

      main.wide {
        max-width: none;
        width: min(1600px, calc(100vw - 4rem));
      }
      footer {
        margin-top: 3rem;
        padding: 1rem 2rem;
        background-color: #161b22;
        border-top: 1px solid #30363d;
        text-align: center;
        color: #7d8590;
        font-size: 0.875rem;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="logo">
        <a href="/">MGG Hub</a>
      </div>
      <nav>
    <a href="/mutants">Мутанты</a>
    <a href="/skins">Скины</a>
    <a href="/simulators/stats">Калькулятор</a>
    <a href="/materials">Материалы</a>
    <a href="/simulators">Симуляторы</a>
    <a href="/simulators/breeding">Скрещивания</a> <!-- ← добавить -->
    </nav>
    </header>
    <main class={fullWidth ? 'wide' : ''}>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} MGG Hub — база знаний по игре и симуляторы с реальными шансами.</p>
    </footer>
  </body>
</html>
