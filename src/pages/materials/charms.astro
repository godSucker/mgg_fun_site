---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DataTable from '../../components/DataTable.astro';
import charmsData from '../../data/materials/charms.json';

// Запрет масштабирования на мобильных для страницы материалов
const NO_ZOOM_VIEWPORT = "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no";

const charmsColumns = charmsData && charmsData.length > 0
  ? Object.keys(charmsData[0]).map((key) => ({ key, label: key }))
  : [];
---

<BaseLayout title="Чары (Charms)" viewport={NO_ZOOM_VIEWPORT}>
  <h1>Чары</h1>
  <p>Бустеры, увеличивающие статы и возможности мутантов.</p>
  <DataTable columns={charmsColumns} rows={charmsData} title="Список чаров" />
</BaseLayout>