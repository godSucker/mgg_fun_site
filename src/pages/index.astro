---
import BaseLayout from '../layouts/BaseLayout.astro';
import CardGrid from '../components/CardGrid.astro';
import materialPreview from '../data/materials/material.json';
import charmsPreview from '../data/materials/charms.json';
import orbsPreview from '../data/materials/orbs.json';
---

<BaseLayout title="Archivist-Library — база знаний по игре и симуляторы с реальными шансами">
  <section class="hero">
    <h1>Archivist-Library</h1>
    <p class="tagline">Все в одном месте.</p>
    <div class="hero-buttons">
      <a href="/mutants" class="btn">Перейти к мутантам</a>
      <a href="/simulators" class="btn btn-secondary">Симуляторы</a>
    </div>
  </section>

  <CardGrid
    heading="Разделы сайта"
    cards={[
      {
        title: 'Мутанты',
        desc: 'Список мутантов и скинов',
        href: '/mutants',
      },
      {
        title: 'Калькулятор статов мутанта',
        desc: 'Точный рассчет статов ваших мутантов',
        href: '/simulators/stats',
      },
      {
        title: 'Калькулятор эво',
        desc: 'Точный рассчет ресурсов для поднятия уровня эво',
        href: '/evolution/evotech-calculator',
      },
      {
        title: 'Материалы',
        desc: 'Расходники, жетоны, бустеры, сферы, здания и зоны',
        href: '/materials',
      },
      {
        title: 'Симуляторы',
        desc: 'Симуляция рулеток, крафта и реактора',
        href: '/simulators',
      },
    ]}
  />

</BaseLayout>

<style>
  .hero {
    text-align: center;
    margin-bottom: 1.5rem;
    padding: 1rem 0;
  }
  
  .hero h1 {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }
  
  .tagline {
    font-size: 1rem;
    margin-bottom: 1.25rem;
    color: #8b949e;
  }
  
  .hero-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 0 1rem;
  }
  
  .btn {
    display: inline-block;
    width: 100%;
    max-width: 280px;
    padding: 0.875rem 1.5rem;
    border-radius: 0.5rem;
    background-color: #238636;
    color: white;
    text-decoration: none;
    font-weight: 600;
    text-align: center;
    font-size: 0.95rem;
    transition: background-color 0.2s;
  }
  
  .btn:hover {
    background-color: #2ea043;
  }
  
  .btn-secondary {
    background-color: #0969da;
  }
  
  .btn-secondary:hover {
    background-color: #218bff;
  }
  
  /* Tablet styles */
  @media (min-width: 768px) {
    .hero {
      margin-bottom: 2rem;
      padding: 1.5rem 0;
    }
    
    .hero h1 {
      font-size: 2rem;
    }
    
    .tagline {
      font-size: 1.125rem;
      margin-bottom: 1.5rem;
    }
    
    .hero-buttons {
      flex-direction: row;
      justify-content: center;
      gap: 1rem;
    }
    
    .btn {
      width: auto;
      max-width: none;
      padding: 0.875rem 1.75rem;
    }
  }
  
  /* Desktop styles */
  @media (min-width: 1024px) {
    .hero {
      margin-bottom: 2rem;
    }
    
    .hero h1 {
      font-size: 2.25rem;
    }
    
    .btn {
      padding: 0.75rem 1.5rem;
    }
  }
</style>
