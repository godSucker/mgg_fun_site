---
import BaseLayout from '../layouts/BaseLayout.astro';
import EvoLeaderboard from '../components/EvoLeaderboard.svelte';
import { loadEvoTop } from '../lib/xlsx-loader';
// Импортируем базу мутантов
import mutantsRaw from '../data/mutants/normal.json';

const players = loadEvoTop();
---

<BaseLayout
  title="Топ по Эволюции | Archivist-Library"
  fullWidth
  viewport="width=device-width, initial-scale=1"
>
  <div class="top-page">
    <div class="header-section">
      <a class="back-link" href="/">← На главную</a>
      <h1>Топ по эво</h1>
      <p>Игроки с самым высоким эво.</p>
    </div>

    <!-- Передаем игроков И базу мутантов -->
    <EvoLeaderboard client:load players={players} mutantsDb={mutantsRaw} />
  </div>
</BaseLayout>

<style>
  .top-page {
    min-height: 100vh;
    padding: 1rem;
    box-sizing: border-box;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  .header-section {
    max-width: 800px;
    margin: 0 auto 2rem;
    text-align: center;
  }

  h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    color: #fff;
    margin: 0.5rem 0;
    background: linear-gradient(to right, #fff, #38bdf8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  p {
    color: #94a3b8;
    font-size: 1rem;
  }

  .back-link {
    display: inline-block;
    color: #64748b;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  .back-link:hover { color: #fff; }
</style>
