---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { listGachas } from '../../../lib/reactor-gacha';

const gachas = listGachas();
---
<BaseLayout title="Реактор — выбор генератора">
  <section class="intro">
    <h1>Реактор: выберите генератор</h1>
    <p>
      Здесь собраны все тематические генераторы реактора Mutants Genetic Gladiators.
      Выберите нужную коллекцию, чтобы перейти к симулятору и оценить шансы выпадения мутантов.
    </p>
  </section>

  <section class="gacha-list" aria-label="Генераторы реактора">
    <div class="list-grid">
      {gachas.map((gacha) => (
        <a class="gacha-card" href={`/simulators/reactor/${gacha.id}`}>
          <div class="card-cover" aria-hidden="true">
            {gacha.cover ? (
              <img src={gacha.cover} alt="" loading="lazy" />
            ) : (
              <span>Mutants Reactor</span>
            )}
          </div>
          <div class="card-header">
            <span class="tag">{gacha.filter}</span>
            <h2>{gacha.name}</h2>
          </div>
          <div class="card-body">
            <div class="stat">
              <span class="label">Мутантов</span>
              <strong>{gacha.basic_elements.length}</strong>
            </div>
            <div class="stat">
              <span class="label">Жетоны</span>
              <strong>{gacha.token_cost}</strong>
            </div>
            <div class="stat">
              <span class="label">Золото</span>
              <strong>{gacha.hc_cost}</strong>
          <div class="card-cover">
            {gacha.cover ? (
              <img src={gacha.cover} alt="" loading="lazy" />
            ) : (
              <span class="fallback">Mutants Reactor</span>
            )}
            <div class="overlay">
              <span class="tag">{gacha.filter}</span>
              <h2>{gacha.name}</h2>
              <span class="cta">Открыть генератор →</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .intro {
    margin-bottom: 2.5rem;
  }

  .intro h1 {
    margin: 0 0 1rem;
    font-size: 2.4rem;
    color: #f8fafc;
  }

  .intro p {
    margin: 0;
    color: #94a3b8;
    max-width: 720px;
    font-size: 1rem;
    line-height: 1.7;
  }

  .gacha-list {
    margin-top: 3rem;
  }

  .list-grid {
    display: grid;
    gap: 1.75rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .gacha-card {
    display: block;
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid rgba(96, 165, 250, 0.35);
    background: rgba(15, 23, 42, 0.9);
    text-decoration: none;
    color: inherit;
    transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
  }

  .card-cover {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    border: 1px solid rgba(96, 165, 250, 0.28);
    background: radial-gradient(circle at 50% 10%, rgba(59, 130, 246, 0.4), rgba(15, 23, 42, 0.9));
    aspect-ratio: 16 / 9;
    display: grid;
    place-items: center;
  }

  .card-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.2) contrast(1.05);
    transition: transform 0.3s ease;
  }

  .gacha-card:hover .card-cover img {
    transform: scale(1.04);
  }

  .card-cover span {
    font-size: 0.95rem;
    color: rgba(226, 232, 240, 0.7);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .gacha-card:hover {
    transform: translateY(-6px);
    border-color: rgba(96, 165, 250, 0.65);
    box-shadow: 0 18px 36px rgba(37, 99, 235, 0.25);
    aspect-ratio: 16 / 9;
    overflow: hidden;
    display: block;
  }

  .card-cover img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.12) contrast(1.08);
    transition: transform 0.35s ease;
  }

  .fallback {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    font-size: 1rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(226, 232, 240, 0.7);
    background: radial-gradient(circle at 40% 20%, rgba(59, 130, 246, 0.35), rgba(15, 23, 42, 0.92));
  }

  .overlay {
    position: absolute;
    inset: 0;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: 0.6rem;
    background: linear-gradient(180deg, rgba(15, 23, 42, 0) 20%, rgba(15, 23, 42, 0.78));
  }

  .tag {
    align-self: flex-start;
    background: rgba(15, 23, 42, 0.65);
    border: 1px solid rgba(148, 163, 184, 0.35);
    border-radius: 999px;
    padding: 0.35rem 0.85rem;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #cbd5f5;
  }

  .overlay h2 {
    margin: 0;
    font-size: 1.6rem;
    color: #f8fafc;
  }

  .overlay .cta {
    font-size: 0.95rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: #93c5fd;
  }

    .gacha-card:hover {
    transform: translateY(-6px);
    border-color: rgba(96, 165, 250, 0.65);
    box-shadow: 0 22px 38px rgba(37, 99, 235, 0.28);
  }

  .gacha-card:hover .card-cover img {
    transform: scale(1.06);
  }

  @media (max-width: 640px) {
    .list-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
