---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { listGachas } from '../../../lib/reactor-gacha';

let gachas: ReturnType<typeof listGachas> = [];
let loadError = false;

try {
  gachas = listGachas();
} catch (error) {
  loadError = true;
  console.error('Не удалось загрузить генераторы реактора', error);
}
---
<BaseLayout title="Реактор — выбор генератора">
  <section class="intro">
    <h1>Реактор: выберите генератор</h1>
    <p>
      Здесь собраны все тематические генераторы реактора Mutants Genetic Gladiators.
      Выберите нужную коллекцию, чтобы перейти к симулятору и оценить шансы выпадения мутантов.
    </p>
  </section>

  <section class="gacha-list" aria-label="Генераторы реактора">
    {loadError ? (
      <div class="error-state" role="alert">
        <p>Не удалось загрузить список генераторов. Попробуйте обновить страницу позже.</p>
        <p class="hint">Если проблема повторяется, сообщите об этом в Discord сервера проекта.</p>
      </div>
    ) : (
      <div class="list-grid">
        {gachas.map((gacha) => (
          <a class="gacha-card" href={`/simulators/reactor/${gacha.id}`}>
            <div class="card-cover">
              {gacha.cover ? (
                <img src={gacha.cover} alt="" loading="lazy" />
              ) : (
                <span class="fallback">Mutants Reactor</span>
              )}
              <div class="overlay">
                <span class="tag">{gacha.filter}</span>
                <h2>{gacha.name}</h2>
                <span class="cta">Открыть генератор →</span>
              </div>
            </div>
            <dl class="card-stats">
              <div>
                <dt>Мутантов</dt>
                <dd>{gacha.basic_elements.length}</dd>
              </div>
              <div>
                <dt>Жетоны</dt>
                <dd>{gacha.token_cost}</dd>
              </div>
              <div>
                <dt>Золото</dt>
                <dd>{gacha.hc_cost}</dd>
              </div>
            </dl>
          </a>
        ))}
      </div>
    )}
  </section>
</BaseLayout>

<style>
  .intro {
    margin-bottom: 2.5rem;
  }

  .intro h1 {
    margin: 0 0 1rem;
    font-size: 2.4rem;
    color: #f8fafc;
  }

  .intro p {
    margin: 0;
    color: #94a3b8;
    max-width: 720px;
    font-size: 1rem;
    line-height: 1.7;
  }

  .gacha-list {
    margin-top: 3rem;
  }

  .error-state {
    margin: 0;
    padding: 2.5rem;
    border-radius: 18px;
    border: 1px solid rgba(96, 165, 250, 0.25);
    background: rgba(15, 23, 42, 0.85);
    color: #cbd5f5;
    text-align: center;
    font-size: 1.05rem;
    line-height: 1.8;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .error-state .hint {
    margin: 0;
    font-size: 0.95rem;
    color: rgba(148, 163, 184, 0.8);
  }

  .list-grid {
    display: grid;
    gap: 1.75rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .gacha-card {
    display: flex;
    flex-direction: column;
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid rgba(96, 165, 250, 0.28);
    background: rgba(15, 23, 42, 0.92);
    text-decoration: none;
    color: inherit;
    transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
  }

  .gacha-card:hover {
    transform: translateY(-6px);
    border-color: rgba(96, 165, 250, 0.6);
    box-shadow: 0 18px 38px rgba(37, 99, 235, 0.28);
  }

  .card-cover {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: radial-gradient(circle at 40% 20%, rgba(59, 130, 246, 0.35), rgba(15, 23, 42, 0.85));
  }

  .card-cover img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.08) contrast(1.05);
    transition: transform 0.35s ease;
  }

  .gacha-card:hover .card-cover img {
    transform: scale(1.05);
  }

  .fallback {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    font-size: 1rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(226, 232, 240, 0.7);
  }

  .overlay {
    position: absolute;
    inset: 0;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    gap: 0.65rem;
    background: linear-gradient(180deg, rgba(15, 23, 42, 0) 25%, rgba(15, 23, 42, 0.82));
  }

  .tag {
    align-self: flex-start;
    background: rgba(15, 23, 42, 0.7);
    border-radius: 999px;
    padding: 0.35rem 0.85rem;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #cbd5f5;
  }

  .overlay h2 {
    margin: 0;
    font-size: 1.55rem;
    color: #f8fafc;
  }

  .overlay .cta {
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #93c5fd;
  }

  .card-stats {
    display: grid;
    gap: 0.8rem;
    padding: 1.15rem 1.35rem 1.4rem;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  }

  .card-stats div {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    padding: 0.75rem;
    border-radius: 14px;
    background: rgba(15, 23, 42, 0.55);
    border: 1px solid rgba(96, 165, 250, 0.2);
  }

  .card-stats dt {
    margin: 0;
    font-size: 0.72rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(148, 163, 184, 0.75);
  }

  .card-stats dd {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: #bfdbfe;
  }

  @media (max-width: 640px) {
    .list-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
