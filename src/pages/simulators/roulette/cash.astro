---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CashMachineSimulator from '../../../components/simulators/cash/CashMachineSimulator.svelte';
import { cashMachine, getRewardChance } from '../../../lib/cash-machine';

const jackpotReward = cashMachine.rewards.find((reward) => reward.isSuperJackpot) ?? cashMachine.rewards[0];
const jackpotChance = jackpotReward ? getRewardChance(jackpotReward, cashMachine) : 0;
---
<BaseLayout title="Cash Frenzy — симулятор рулетки" fullWidth={true}>
  <section class="hero">
    <div class="hero-card">
      <span class="badge">Sim • Cash Machine</span>
      <h1>Cash Frenzy</h1>
      <p>
        Золотая рулетка из Mutants: Genetic Gladiators. Симулятор повторяет реальные шансы
        выпадения призов и позволяет быстро проверить, окупается ли вложенное золото.
      </p>
      <dl class="quick-stats" aria-label="Основные параметры машины">
        <div>
          <dt>Стоимость прокрута</dt>
          <dd>{cashMachine.cost} золота</dd>
        </div>
        <div>
          <dt>Количество призов</dt>
          <dd>{cashMachine.rewards.length}</dd>
        </div>
        <div>
          <dt>Суперджекпот</dt>
          <dd>{(jackpotChance * 100).toFixed(6)}%</dd>
        </div>
      </dl>
    </div>
  </section>

  <CashMachineSimulator client:load machine={cashMachine} />
</BaseLayout>

<style>
  .hero {
    margin-bottom: 2.5rem;
  }

  .hero-card {
    position: relative;
    padding: 2.75rem;
    border-radius: 36px;
    background: radial-gradient(circle at 20% 20%, rgba(255, 215, 0, 0.28), rgba(13, 17, 23, 0.92));
    border: 1px solid rgba(255, 202, 40, 0.3);
    box-shadow: 0 24px 46px rgba(255, 193, 7, 0.18);
    overflow: hidden;
  }

  .hero-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 80% 0%, rgba(255, 255, 255, 0.12), transparent 55%);
    pointer-events: none;
    mix-blend-mode: screen;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.45rem 1.15rem;
    border-radius: 999px;
    background: rgba(255, 160, 0, 0.15);
    color: #ffe082;
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  h1 {
    margin: 1rem 0 0.75rem;
    font-size: 3rem;
    color: #ffecb3;
  }

  p {
    margin: 0;
    max-width: 640px;
    color: rgba(248, 250, 252, 0.78);
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .quick-stats {
    margin: 2rem 0 0;
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  }

  dt {
    margin: 0 0 0.4rem;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(248, 250, 252, 0.55);
  }

  dd {
    margin: 0;
    font-size: 1.35rem;
    color: #ffecb3;
    font-weight: 600;
  }

  @media (max-width: 680px) {
    .hero-card {
      padding: 2rem;
    }

    h1 {
      font-size: 2.3rem;
    }
  }
</style>
