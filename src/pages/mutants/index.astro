---
import BaseLayout from '@/layouts/BaseLayout.astro';
import MutantsBrowser from '@/components/MutantsBrowser.svelte';

// Берём существующие файлы как у тебя сейчас
import bronze   from '@/data/mutants/bronze.json';
import silver   from '@/data/mutants/silver.json';
import gold     from '@/data/mutants/gold.json';
import platinum from '@/data/mutants/platinum.json';

// Собираем всех мутантов в один список.
// Внутри MutantsBrowser фильтр по звёздам сам покажет нужную подвыборку.
const items = [...bronze, ...silver, ...gold, ...platinum];

export const prerender = true;
---

<BaseLayout>
  <MutantsBrowser items={items} title="Мутанты" />
</BaseLayout>
